OPTIMIZER_MOMENTUM=0.9
OPTIMIZER_WEIGHT_DECAY=0.0005
SCHEDULER_STEP_SIZE=3
SCHEDULER_GAMMA=0.1
EARLY_STOPPING_PATIENCE=7
EARLY_STOPPING_MIN_DELTA=0.001
FRCNN_EPOCHS=20

NUMBER_OF_AUGMENTED_IMAGES=200
BATCH_SIZE=16
MODEL_OUTPUT_DIR=/data/output
MODEL_PATH=/inference/model
MODEL_TYPE=yolo
MODEL_INFERENCE_INPUT=/inference/input_images
MODEL_INFERENCE_OUTPUT=/inference/output_images

