PYTHONUNBUFFERED=1
TRAIN_PATH=train
VAL_PATH=val
IMAGES_PATH=images
LABEL_PATH=labels
IMAGE_WIDTH=640
IMAGE_HEIGHT=640
INPUT_DATA_DIR=/data
PREPROCESSING_OUTPUT_DIR=/data/tmp/preprocessed
MAPPING_FILE=/data/tmp/preprocessed/mapping.yml
PIXMIX_OUTPUT_DIR=/data/tmp/augmented/pixmix
FRACTAL_PATH=/data/fractals
ENV_PATH=/env_data/.env

PIXMIX_ENABLE_HORIZONTAL_FLIP=true
PIXMIX_ENABLE_VERTICAL_FLIP=true
PIXMIX_ENABLE_ROTATE=true
PIXMIX_ROTATE_LIMIT=45
PIXMIX_ENABLE_HUE_SATURATION=true
PIXMIX_HUE_SHIFT_LIMIT=10
PIXMIX_SAT_SHIFT_LIMIT=10
PIXMIX_VAL_SHIFT_LIMIT=10
PIXMIX_ENABLE_BRIGHTNESS_CONTRAST=true
PIXMIX_BRIGHTNESS_LIMIT=0.2
PIXMIX_CONTRAST_LIMIT=0.2
PIXMIX_ENABLE_SHEAR=TRUE
PIXMIX_SHEAR_DEGREE_LIMIT=20
PIXMIX_ENABLE_GAUSSIAN_BLUR=true
PIXMIX_GAUSSIAN_BLUR_MINIMUM=3
PIXMIX_GAUSSIAN_BLUR_MAX=5
PIXMIX_ENABLE_GAUSSIAN_NOISE=TRUE
PIXMIX_NOISE_VAR_LIMIT=0.05
PIXMIX_RANDOM_GAMMA_LIMIT=0.2
PIXMIX_ENABLE_RANDOM_RAIN=true
PIXMIX_ENABLE_RANDOM_FOG=true
PIXMIX_ENABLE_RANDOM_SNOW=true
PIXMIX_ENABLE_RANDOM_SHADOW=true
PIXMIX_ENABLE_RANDOM_SUNFLARE=true
PIXMIX_AUGMENTATION_PROBABILITY=0.5
PIXMIX_MIXING_PROBABILITY=0.25
PIXMIX_MIXING_FACTOR_LOWER_RANGE=0.1
PIXMIX_MIXING_FACTOR_UPPER_RANGE=0.3

YOLO_WITH_AUGMENTATION=TRUE
YOLO_WITHOUT_AUGMENTATION=TRUE
YOLO_MODELS=YOLOv10-N
